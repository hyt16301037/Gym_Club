<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/fragment_publish"
    android:background="@drawable/background_publish"
    tools:context=".PublishFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft = "55dp"
        android:layout_marginTop = "90dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Topic:"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/topic_editText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@id/topic_text" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Text:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/text_editText"
            android:layout_width="260dp"
            android:layout_height="240dp"
            android:singleLine="false"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
